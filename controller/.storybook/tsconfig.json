{
  "compilerOptions": {
    "outDir": "build/lib",
    "module": "ESNext",
    "target": "es2022",
    "lib": ["es5", "es6", "es7", "es2017", "es2018", "es2022","dom"],
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "include": [
    "./*.ts",
    "./*.js",
    "../types/**/*.ts",
    "../components/**/*.ts",
    "../components/**/*.tsx"
  ]
}